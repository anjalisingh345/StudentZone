<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/reletive"
    android:background="@color/yellow"></RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reletive"
        android:layout_marginTop="-63dp"
        android:layout_centerHorizontal="true"
       android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="40dp">

            <Button
                android:id="@+id/dataentry"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@color/yellow"
                android:text="Data Entry"

                android:textColor="@android:color/black"
                android:textSize="20dp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="30dp">
        <Button
            android:id="@+id/datavalidation"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/reletive"

            android:layout_toRightOf="@+id/dataentry"
            android:background="@color/yellow"
            android:text="Data Validation"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>