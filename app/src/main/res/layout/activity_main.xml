<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/yellow">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/dash2"
        android:background="@drawable/dash2bg"></RelativeLayout>
    <RelativeLayout
        android:id="@+id/shortcut"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/corcule"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shortcircle"></RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:src="@drawable/ic_baseline_arrow_back_24"></ImageView>
    <EditText
        android:id="@+id/clientnum"

        android:background="@drawable/buttonbg"

        android:padding="5dp"
        android:inputType="phone"
        android:hint="Enter Client Mobile Number"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textColor="@android:color/black"

        android:textSize="15dp"/>

    <EditText
        android:id="@+id/valinum"
        android:textColorHint="@color/black"
        android:background="@drawable/buttonbg"
        android:textColorHighlight="@color/colorAccent"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:inputType="phone"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/clientnum"
        android:hint="Validate Mobile Number"
       android:textColor="@color/black"
        android:textSize="15dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/valinum"
       android:id="@+id/linear"

        android:layout_margin="40dp"
        android:orientation="vertical">

    <EditText
        android:id="@+id/pgname"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:layout_marginHorizontal="30dp"
        android:hint="Property/PG Name"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:inputType="text"
        android:textSize="15dp"
        android:singleLine="true"
        android:drawableTint="@android:color/white"
        android:backgroundTint="@android:color/white" />

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="30dp"
            android:padding="5dp"
            android:hint="City"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:inputType="text"
            android:textSize="15dp"
            android:singleLine="true"
            android:drawableTint="@android:color/white"
            android:backgroundTint="@android:color/white" />

        <EditText
            android:id="@+id/area"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@android:color/white"
            android:drawableTint="@android:color/white"
            android:hint="Area/Locality"
            android:inputType="text"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/ownerName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:layout_marginHorizontal="30dp"
            android:hint="Owner Name (Optional)"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:inputType="text"
            android:textSize="15dp"
            android:singleLine="true"
            android:drawableTint="@android:color/white"
            android:backgroundTint="@android:color/white" />

        <EditText
            android:id="@+id/language"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:layout_marginHorizontal="30dp"
            android:hint="Preferred Language (Optional)"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:inputType="text"
            android:textSize="15dp"
            android:singleLine="true"
            android:drawableTint="@android:color/white"
            android:backgroundTint="@android:color/white" />



    </LinearLayout>

    <com.spark.submitbutton.SubmitButton
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:id="@+id/sub"
        android:text="Submit"
       android:gravity="center"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="3000"
        app:sub_btn_line_color="@color/yellow"
        app:sub_btn_ripple_color="@color/colorAccent"
        android:layout_below="@+id/linear"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-black"
        app:sub_btn_tick_color="@color/white"
        android:textSize="15dp" />


</RelativeLayout>